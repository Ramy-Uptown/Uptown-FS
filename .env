# Copy this file to `.env` before running docker compose.
# Only development-safe defaults are included.

# API auth
JWT_SECRET=devsecretchange

# Database (compose provides host/port/user/name; password must be here)
DB_PASSWORD=apppass

# Initial admin seed (created on first boot if users table is empty)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456

# Optional: Google Cloud Vision OCR key (uncomment to enable fallback OCR)
# GCV_API_KEY=your-key-here

# Client URL to reach API when running locally (usually set in docker-compose)
# VITE_API_URL=http://localhost:3000